[Unit]
Description=Apache Kafka
Documentation=http://kafka.apache.org/documentation.html
Requires=network.target
After=network.target

[Service]
Type=simple
StandardOutput=null
Environment="KAFKA_HEAP_OPTS={{ kafka_java_heap }}"
Environment="LOG_DIR={{ kafka_log_dir }}"
Environment="JAVA_HOME=/Application/jdk1.8.0_144"
ExecStart={{ kafka_dir }}/bin/kafka-server-start.sh {{ kafka_dir }}/config/server.properties
ExecStop={{ kafka_dir }}/bin/kafka-server-stop.sh  {{ kafka_dir }}/config/server.properties
User={{ kafka_user }}
Group={{ kafka_group }}
LimitNOFILE=infinity

[Install]
WantedBy=multi-user.target
Alias=kafka.service
